# Environment Configuration Example
# Copy this file to .env and update the values

# Server Settings
HOST=0.0.0.0
PORT=3000
DEBUG=False

# Ollama API Settings
OLLAMA_API_BASE_URL=http://localhost:11434
DEFAULT_MODEL=llama3:8b
REQUEST_TIMEOUT=60.0

# Database Settings (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ollama_api
DB_USER=postgres
DB_PASSWORD=your_secure_password
# Alternative: Use full DATABASE_URL instead of individual settings
# DATABASE_URL=postgresql://postgres:password@localhost:5432/ollama_api

# Authentication Settings
SECRET_KEY=your_super_secret_key_here_generate_a_new_one
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key Settings
API_KEY_DEFAULT_EXPIRE_DAYS=365
API_KEY_MAX_EXPIRE_DAYS=1825

# Rate Limiting Settings
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Redis Settings (for session management and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Alternative: Use full REDIS_URL instead of individual settings
# REDIS_URL=redis://localhost:6379/0

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL=False

# Logging Settings
LOG_LEVEL=INFO
LOG_USAGE=True

# CORS Settings (comma-separated)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Admin Settings (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password
CREATE_DEFAULT_ADMIN=True